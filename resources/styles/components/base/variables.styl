/**
 * This file contains default variables that you can override. It
 * also acts as a dictionary for what variables are available.
 */

/**
 * GLOBAL BASE SIZE
 * This is the default sizes that other sizes will by divided by
 * to find the correct EM.
 */
$global__size                     ?= 16px

/**
 * ENFORCE HEIGHT
 * If you want to be able to use 100% on the window size, set this
 * to true.
 */
$global__enforce-height           ?= true

/**
 * ENFORCE SCROLL BAR
 * Forces a vertical scroll bar be added to help prevent the page from
 * being jumpy when page height dynamically change.
 */
$global__enforce-scroll-bar       ?= true

/**
 * MEDIA QUERY SIZES
 * The media query breakpoints
 */
$global__media-xs                 ?= unit(320px / 16, 'em')
$global__media-sm                 ?= unit(480px / 16, 'em')
$global__media-md                 ?= unit(768px / 16, 'em')
$global__media-lg                 ?= unit(1024px / 16, 'em')
$global__media-xl                 ?= unit(1146px / 16, 'em')

/**
 * COLORS
 */
$global__gray-color-100           ?= #f5f5f5
$global__gray-color-200           ?= #e0e0e0
$global__gray-color-300           ?= #9e9e9e
$global__gray-color-400           ?= #616161
$global__gray-color-500           ?= #212121

$global__brand-color-100          ?= #D1C4E9
$global__brand-color-200          ?= #9575CD
$global__brand-color-300          ?= #673AB7
$global__brand-color-400          ?= #512DA8
$global__brand-color-500          ?= #311B92

$global__accent-color-100         ?= #CFD8DC
$global__accent-color-200         ?= #90A4AE
$global__accent-color-300         ?= #607D8B
$global__accent-color-400         ?= #455A64
$global__accent-color-500         ?= #263238

$global__success-color-100        ?= #AED581
$global__success-color-200        ?= #8BC34A
$global__success-color-300        ?= #689F38

$global__error-color-100          ?= #E57373
$global__error-color-200          ?= #F44336
$global__error-color-300          ?= #D32F2F

$global__muted-text-color         ?= $global__gray-color-300
$global__body-text-color          ?= $global__gray-color-400
$global__heading-text-color       ?= $global__gray-color-500
$global__link-text-color          ?= $global__brand-color-300

/**
 * SLECTION
 * Changes the colors for selected text.
 */
$global__selection-color          ?= #fff
$global__selection-background     ?= alpha($global__brand-color-400, 0.7)

/**
 * BODY BACKGROUND
 * Sets the background style for the body.
 */
$global__background              ?= #fff

/**
 * RULES
 * These are for horizontal (and vertical, if you add them) rules.
 */
$global__rule-width               ?= 1px
$global__rule-color               ?= $global__gray-color-100

/**
 * FONTS
 */
$global__font-paragraph           ?= 'Helvetica Neue', Helvetica, Arial, sans-serif
$global__font-anthology           ?= $global__font-paragraph
$global__font-weight              ?= 300
$global__line-height              ?= 23px

/**
 * HEADINGS
 */
$global__heading-1-font-size      ?= 50px
$global__heading-1-line-height    ?= 1
$global__heading-1-font-weight    ?= 200
$global__heading-1-font-style     ?= normal

